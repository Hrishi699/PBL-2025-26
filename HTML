    <script>
        // LocalStorage Manager
        const StorageManager = {
            STORAGE_KEY: 'phishguard_data',
            
            // Initialize storage
            init() {
                if (!localStorage.getItem(this.STORAGE_KEY)) {
                    localStorage.setItem(this.STORAGE_KEY, JSON.stringify({
                        scans: [],
                        statistics: {
                            totalScans: 0,
                            phishingCount: 0,
                            legitimateCount: 0,
                            suspiciousCount: 0
                        }
                    }));
                }
            },
            
            // Get all data
            getData() {
                return JSON.parse(localStorage.getItem(this.STORAGE_KEY));
            },
            
            // Save data
            saveData(data) {
                localStorage.setItem(this.STORAGE_KEY, JSON.stringify(data));
            },
            
            // Add scan record
            addScan(url, result, riskScore) {
                const data = this.getData();
                const scan = {
                    id: Date.now(),
                    url: url,
                    result: result,
                    riskScore: riskScore,
                    timestamp: new Date().toISOString(),
                    date: new Date().toLocaleDateString()
                };
                
                data.scans.unshift(scan);
                data.statistics.totalScans++;
                
                if (result === 'dangerous') {
                    data.statistics.phishingCount++;
                } else if (result === 'suspicious') {
                    data.statistics.suspiciousCount++;
                } else {
                    data.statistics.legitimateCount++;
                }
                
                this.saveData(data);
                return scan;
            },
            
            // Get all scans
            getAllScans() {
                return this.getData().scans;
            },
            
            // Get statistics
            getStatistics() {
                return this.getData().statistics;
            },
            
            // Clear all data
            clearAll() {
                localStorage.removeItem(this.STORAGE_KEY);
                this.init();
            },
            
            // Get storage size
            getStorageSize() {
                const data = localStorage.getItem(this.STORAGE_KEY);
                return data ? (data.length / 1024).toFixed(2) : 0;
            }
        };

        // Initialize storage on page load
        StorageManager.init();

        // Tab switching
        function switchTab(tabName) {
            document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
            
            event.target.classList.add('active');
            document.getElementById(tabName).classList.add('active');
            
            if (tabName === 'history') {
                loadHistory();
            } else if (tabName === 'statistics') {
                loadStatistics();
            } else if (tabName === 'settings') {
                loadSettings();
            } else if (tabName === 'scanner') {
                updateDashboard();
            }
        }

        // Scan URL with Random Forest-based phishing detection logic
        function scanURL() {
            const urlInput = document.getElementById('urlInput');
            const url = urlInput.value.trim();
            
            if (!url) {
                showAlert('Please enter a URL', 'info');
                return;
            }
            
            // Perform Random Forest-based phishing detection
            const analysis = analyzeURL(url);
            
            // Save to storage
            StorageManager.addScan(url, analysis.result, analysis.riskScore);
            
            // Show result with details
            showAlert(`‚úÖ URL scanned! Result: ${analysis.result.toUpperCase()} (Risk: ${analysis.riskScore}/100) - ${analysis.indicators.length} indicators found`, 'success');
            
            // Clear input
            urlInput.value = '';
            
            // Update dashboard
            updateDashboard();
        }

        // Random Forest-based phishing detection logic (matching your ML model)
        function analyzeURL(url) {
            let riskScore = 0;
            const indicators = [];
            
            try {
                // Parse URL
                let urlObj;
                if (!url.startsWith('http://') && !url.startsWith('https://')) {
                    urlObj = new URL('https://' + url);
                } else {
                    urlObj = new URL(url);
                }
                
                const hostname = urlObj.hostname;
                const protocol = urlObj.protocol;
                const fullUrl = urlObj.href;
                
                // Trusted domains list (whitelist)
                const trustedDomains = [
                    'google.com', 'facebook.com', 'amazon.com', 'microsoft.com',
                    'apple.com', 'netflix.com', 'linkedin.com', 'twitter.com',
                    'instagram.com', 'youtube.com', 'github.com', 'stackoverflow.com',
                    'wikipedia.org', 'reddit.com', 'yahoo.com', 'bing.com',
                    'outlook.com', 'live.com', 'gmail.com', 'ebay.com',
                    'paypal.com', 'adobe.com', 'dropbox.com', 'zoom.us'
                ];
                
                // Suspicious keywords
                const suspiciousKeywords = [
                    'login', 'signin', 'account', 'verify', 'secure', 'update',
                    'suspend', 'confirm', 'banking', 'payment', 'billing'
                ];
                
                // Suspicious TLDs
                const suspiciousTLDs = [
                    '.tk', '.ml', '.ga', '.cf', '.gq', '.xyz', '.top', '.work',
                    '.date', '.review', '.country', '.stream', '.download'
                ];
                
                // Feature extraction
                const features = {
                    has_https: protocol === 'https:' ? 1 : 0,
                    domain_length: hostname.length,
                    url_length: fullUrl.length,
                    has_ip: /^(\d{1,3}\.){3}\d{1,3}$/.test(hostname) ? 1 : 0,
                    num_hyphens: (hostname.match(/-/g) || []).length,
                    num_digits: (hostname.match(/\d/g) || []).length,
                    num_subdomains: (hostname.match(/\./g) || []).length,
                    num_dots: (hostname.match(/\./g) || []).length,
                    suspicious_keywords: suspiciousKeywords.some(kw => hostname.toLowerCase().includes(kw)) ? 1 : 0,
                    suspicious_tld: suspiciousTLDs.some(tld => hostname.toLowerCase().endsWith(tld)) ? 1 : 0,
                    has_at_symbol: fullUrl.includes('@') ? 1 : 0,
                    double_slash_path: urlObj.pathname.includes('//') ? 1 : 0,
                    has_port: urlObj.port ? 1 : 0,
                    entropy: calculateEntropy(hostname),
                    num_special_chars: (hostname.match(/[^a-zA-Z0-9.-]/g) || []).length
                };
                
                // Check if trusted domain
                const isTrusted = trustedDomains.some(trusted => 
                    hostname === trusted || hostname.endsWith('.' + trusted)
                );
                
                // Risk scoring based on Random Forest feature importance
                
                // Protocol check (20 points)
                if (features.has_https === 0) {
                    riskScore += 20;
                    indicators.push('‚ö†Ô∏è Not using HTTPS (insecure connection)');
                } else {
                    indicators.push('‚úÖ Using HTTPS protocol');
                }
                
                // IP address check (30 points)
                if (features.has_ip === 1) {
                    riskScore += 30;
                    indicators.push('üö® Using IP address instead of domain name');
                }
                
                // Domain length (15 points)
                if (features.domain_length > 40) {
                    riskScore += 15;
                    indicators.push('‚ö†Ô∏è Unusually long domain name');
                }
                
                // Hyphens check (20 points)
                if (features.num_hyphens > 3) {
                    riskScore += 20;
                    indicators.push(`üö® Excessive hyphens in domain (${features.num_hyphens})`);
                } else if (features.num_hyphens > 2) {
                    riskScore += 10;
                    indicators.push(`‚ö†Ô∏è Multiple hyphens detected (${features.num_hyphens})`);
                }
                
                // Numbers check (15 points)
                if (features.num_digits > 4) {
                    riskScore += 15;
                    indicators.push('‚ö†Ô∏è Excessive numbers in domain');
                }
                
                // Suspicious TLD (25 points)
                if (features.suspicious_tld === 1) {
                    riskScore += 25;
                    indicators.push('üö® Using suspicious top-level domain (.tk, .ml, .ga, etc.)');
                }
                
                // Suspicious keywords (variable points)
                if (features.suspicious_keywords === 1) {
                    const foundKeywords = suspiciousKeywords.filter(kw => hostname.toLowerCase().includes(kw));
                    if (foundKeywords.length > 0) {
                        const keywordScore = Math.min(30, 15 * foundKeywords.length);
                        riskScore += keywordScore;
                        indicators.push(`‚ö†Ô∏è Contains suspicious keywords: ${foundKeywords.slice(0, 3).join(', ')}`);
                    }
                }
                
                // @ symbol check (30 points)
                if (features.has_at_symbol === 1) {
                    riskScore += 30;
                    indicators.push('üö® Contains @ symbol (authentication bypass attempt)');
                }
                
                // Double slash in path (15 points)
                if (features.double_slash_path === 1) {
                    riskScore += 15;
                    indicators.push('‚ö†Ô∏è Suspicious double slash in URL path');
                }
                
                // Excessive subdomains (15 points)
                if (features.num_subdomains > 4) {
                    riskScore += 15;
                    indicators.push('‚ö†Ô∏è Excessive subdomain levels');
                }
                
                // Port number check (10 points)
                if (features.has_port === 1) {
                    riskScore += 10;
                    indicators.push('‚ö†Ô∏è Using non-standard port number');
                }
                
                // Entropy check (20 points)
                if (features.entropy > 4.0) {
                    riskScore += 20;
                    indicators.push('‚ö†Ô∏è High URL randomness detected');
                }
                
                // Special characters (15 points)
                if (features.num_special_chars > 2) {
                    riskScore += 15;
                    indicators.push('‚ö†Ô∏è Contains unusual special characters');
                }
                
                // Typosquatting check (35 points)
                const typosquatting = checkTyposquatting(hostname);
                if (typosquatting) {
                    riskScore += 35;
                    indicators.push(`üö® Possible typosquatting of: ${typosquatting}`);
                }
                
                // URL length check (10 points)
                if (features.url_length > 75) {
                    riskScore += 10;
                    indicators.push('‚ö†Ô∏è Unusually long URL');
                }
                
                // Short domain on suspicious TLD (10 points)
                if (features.domain_length < 8 && features.suspicious_tld === 1 && !isTrusted) {
                    riskScore += 10;
                    indicators.push('‚ö†Ô∏è Short domain with suspicious TLD');
                }
                
                // Trusted domain check (reduce score significantly)
                if (isTrusted) {
                    riskScore = Math.max(0, riskScore - 40);
                    indicators.push('‚úÖ Recognized trusted domain');
                }
                
                // Ensure risk score is between 0-100
                riskScore = Math.min(100, Math.max(0, riskScore));
                
                // Determine result based on risk score
                let result;
                if (riskScore < 30) {
                    result = 'safe';
                } else if (riskScore < 60) {
                    result = 'suspicious';
                } else {
                    result = 'dangerous';
                }
                
                return {
                    riskScore: riskScore,
                    result: result,
                    indicators: indicators,
                    features: features
                };
                
            } catch (error) {
                console.error('Error analyzing URL:', error);
                return {
                    riskScore: 50,
                    result: 'suspicious',
                    indicators: ['‚ö†Ô∏è Unable to parse URL properly'],
                    features: {}
                };
            }
        }
        
        // Calculate Shannon entropy
        function calculateEntropy(str) {
            const len = str.length;
            const frequencies = {};
            
            for (let i = 0; i < len; i++) {
                const char = str[i];
                frequencies[char] = (frequencies[char] || 0) + 1;
            }
            
            let entropy = 0;
            for (const char in frequencies) {
                const p = frequencies[char] / len;
                entropy -= p * Math.log2(p);
            }
            
            return entropy;
        }
        
        // Check for typosquatting
        function checkTyposquatting(hostname) {
            const commonBrands = {
                'google': ['g00gle', 'gooogle', 'googel', 'gogle', 'goog1e'],
                'facebook': ['faceb00k', 'facebok', 'facebo0k', 'facbook'],
                'amazon': ['amaz0n', 'amazonn', 'arnazon', 'amazom'],
                'paypal': ['paypai', 'paypa1', 'payypai', 'paypall'],
                'microsoft': ['micros0ft', 'microssoft', 'mikrosoft', 'microsof'],
                'apple': ['app1e', 'appl3', 'appie', 'aple'],
                'netflix': ['netfl1x', 'netflixx', 'netfix', 'netflex'],
                'linkedin': ['link3din', 'linkedln', 'linkdin', 'linkin']
            };
            
            for (const [brand, typos] of Object.entries(commonBrands)) {
                if (typos.some(typo => hostname.toLowerCase().includes(typo))) {
                    return brand;
                }
            }
            return null;
        }

        // Update dashboard statistics
        function updateDashboard() {
            const stats = StorageManager.getStatistics();
            const scans = StorageManager.getAllScans();
            
            document.getElementById('totalScans').textContent = stats.totalScans;
            document.getElementById('phishingCount').textContent = stats.phishingCount;
            document.getElementById('legitimateCount').textContent = stats.legitimateCount;
            
            // Today's scans
            const today = new Date().toLocaleDateString();
            const todayScans = scans.filter(scan => scan.date === today).length;
            document.getElementById('todayScans').textContent = todayScans;
        }

        // Load history
        function loadHistory() {
            const scans = StorageManager.getAllScans();
            const historyList = document.getElementById('historyList');
            
            if (scans.length === 0) {
                historyList.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">üì≠</div>
                        <h3>No Scan History</h3>
                        <p>Start scanning URLs to see your history here</p>
                    </div>
                `;
                return;
            }
            
            historyList.innerHTML = scans.map(scan => `
                <div class="history-item ${scan.result}">
                    <div class="url-text">${scan.url}</div>
                    <div class="meta-info">
                        <span>üéØ Result: ${scan.result.toUpperCase()}</span>
                        <span>‚ö†Ô∏è Risk: ${scan.riskScore}/100</span>
                        <span>üïê ${new Date(scan.timestamp).toLocaleString()}</span>
                    </div>
                </div>
            `).join('');
        }

        // Load statistics
        function loadStatistics() {
            const scans = StorageManager.getAllScans();
            const stats = StorageManager.getStatistics();
            
            // Average risk score
            const avgRisk = scans.length > 0 
                ? Math.round(scans.reduce((sum, scan) => sum + scan.riskScore, 0) / scans.length)
                : 0;
            document.getElementById('avgRiskScore').textContent = avgRisk;
            
            // Highest risk
            const highestRisk = scans.length > 0
                ? Math.max(...scans.map(scan => scan.riskScore))
                : 0;
            document.getElementById('highestRisk').textContent = highestRisk;
            
            // Detection rate
            const detectionRate = stats.totalScans > 0
                ? Math.round(((stats.phishingCount + stats.suspiciousCount) / stats.totalScans) * 100)
                : 0;
            document.getElementById('detectionRate').textContent = detectionRate + '%';
            
            // Last scan
            const lastScan = scans.length > 0
                ? new Date(scans[0].timestamp).toLocaleString()
                : 'Never';
            document.getElementById('lastScan').textContent = lastScan;
            
            // Threat distribution
            const threatDist = document.getElementById('threatDistribution');
            threatDist.innerHTML = `
                <div style="margin-bottom: 15px;">
                    <div style="display: flex; justify-content: space-between; margin-bottom: 5px;">
                        <span>üü¢ Safe URLs</span>
                        <strong>${stats.legitimateCount}</strong>
                    </div>
                    <div style="background: #e0e0e0; height: 20px; border-radius: 10px; overflow: hidden;">
                        <div style="background: #28a745; height: 100%; width: ${stats.totalScans > 0 ? (stats.legitimateCount / stats.totalScans * 100) : 0}%;"></div>
                    </div>
                </div>
                <div style="margin-bottom: 15px;">
                    <div style="display: flex; justify-content: space-between; margin-bottom: 5px;">
                        <span>üü° Suspicious URLs</span>
                        <strong>${stats.suspiciousCount}</strong>
                    </div>
                    <div style="background: #e0e0e0; height: 20px; border-radius: 10px; overflow: hidden;">
                        <div style="background: #ffc107; height: 100%; width: ${stats.totalScans > 0 ? (stats.suspiciousCount / stats.totalScans * 100) : 0}%;"></div>
                    </div>
                </div>
                <div>
                    <div style="display: flex; justify-content: space-between; margin-bottom: 5px;">
                        <span>üî¥ Dangerous URLs</span>
                        <strong>${stats.phishingCount}</strong>
                    </div>
                    <div style="background: #e0e0e0; height: 20px; border-radius: 10px; overflow: hidden;">
                        <div style="background: #dc3545; height: 100%; width: ${stats.totalScans > 0 ? (stats.phishingCount / stats.totalScans * 100) : 0}%;"></div>
                    </div>
                </div>
            `;
        }

        // Load settings
        function loadSettings() {
            const size = StorageManager.getStorageSize();
            const scans = StorageManager.getAllScans();
            
            document.getElementById('storageUsed').textContent = size + ' KB';
            document.getElementById('totalRecords').textContent = scans.length;
        }

        // Export to JSON
        function exportToJSON() {
            const data = StorageManager.getData();
            const dataStr = JSON.stringify(data, null, 2);
            const dataBlob = new Blob([dataStr], { type: 'application/json' });
            
            const link = document.createElement('a');
            link.href = URL.createObjectURL(dataBlob);
            link.download = `phishguard_backup_${Date.now()}.json`;
            link.click();
            
            showAlert('Data exported successfully!', 'success');
        }

        // Export to CSV
        function exportToCSV() {
            const scans = StorageManager.getAllScans();
            
            if (scans.length === 0) {
                showAlert('No data to export', 'info');
                return;
            }
            
            const csvHeader = 'ID,URL,Result,Risk Score,Timestamp,Date\n';
            const csvContent = scans.map(scan => 
                `${scan.id},"${scan.url}",${scan.result},${scan.riskScore},${scan.timestamp},${scan.date}`
            ).join('\n');
            
            const csv = csvHeader + csvContent;
            const blob = new Blob([csv], { type: 'text/csv' });
            
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            link.download = `phishguard_export_${Date.now()}.csv`;
            link.click();
            
            showAlert('CSV exported successfully!', 'success');
        }

        // Clear history
        function clearHistory() {
            if (confirm('Are you sure you want to clear all scan history? This cannot be undone.')) {
                StorageManager.clearAll();
                loadHistory();
                updateDashboard();
                showAlert('History cleared successfully!', 'success');
            }
        }

        // Backup data
        function backupData() {
            exportToJSON();
        }

        // Import data
        function importData() {
            document.getElementById('fileInput').click();
        }

        // Handle file import
        function handleFileImport(event) {
            const file = event.target.files[0];
            if (!file) return;
            
            const reader = new FileReader();
            reader.onload = function(e) {
                try {
                    const data = JSON.parse(e.target.result);
                    StorageManager.saveData(data);
                    showAlert('Data imported successfully!', 'success');
                    updateDashboard();
                    loadSettings();
                } catch (error) {
                    showAlert('Error importing data. Invalid file format.', 'info');
                }
            };
            reader.readAsText(file);
        }

        // Clear all data
        function clearAllData() {
            if (confirm('‚ö†Ô∏è WARNING: This will delete ALL your data permanently. Are you sure?')) {
                StorageManager.clearAll();
                showAlert('All data cleared!', 'success');
                updateDashboard();
                loadSettings();
            }
        }

        // Show alert
        function showAlert(message, type) {
            const alertDiv = document.getElementById('scanAlert');
            alertDiv.innerHTML = `<div class="alert ${type}">${message}</div>`;
            setTimeout(() => {
                alertDiv.innerHTML = '';
            }, 3000);
        }

        // Allow Enter key to scan
        document.getElementById('urlInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                scanURL();
            }
        });

        // Load dashboard on page load
        updateDashboard();
    </script>
</body>
</html>
